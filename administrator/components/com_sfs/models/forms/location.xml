<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_sfs/models/rules"
	>
		<field name="id" type="text" default="0" 
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
		

		<field name="name" type="text" class="inputbox"
			size="40" label="Title"
			description="Location Title" required="true" />

		<field name="state" type="list"
			label="JGLOBAL_STATE" description="COM_SFS_COUNTRY_FIELD_STATE_DESC"
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASH</option>
		</field>
		
		<field name="ordering" type="locationordering" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />

	</fieldset>

</form>
