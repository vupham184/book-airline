<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_sfs/models/fields">
		<field name="id"
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			size="10"
			default="0"
			readonly="true"
			class="readonly"
		/>
		
		<field name="logo" type="media" directory="logo/airline"
				hide_none="1" label="Logo"
				size="40"
				description="Airline Logo" />

		<field name="iatacode_id"
			type="hidden"			
			required="true"
		 />
		 
		<field 
			name="affiliation_code"
			type="text"
			label="Affiliation code"
			description=""
			class="inputbox"
			size="10"				
		/>
		
		<field
				name="user_id"
				label="User of airline airports"
				description=""
				class="inputbox"
				size="15"
				/>
				
		<field
				name="airport"
				type="airportedit"
				label="Airport location code(s)"
				description=""
				class="inputbox"
				size="15"
				required="true"
				multiple="multiple"
				/>
		
		<field 
			name="airline_alliance"
			type="text"
			label="Airline Alliance"										
			size="30"	
			class="inputbox"	
		/>

        <field
                name="partner_limit_for_extra_search"
                type="text"
                label="Partner limit for extra search"
                size="30"
                class="inputbox"
                />
		

		<field name="time_zone"
			type="text"
			label="Timezone"							
			required="true"
			size="30"		
		/>
        <field
                name="airport_ring_1_mile"
                type="text"
                label="Ring 1 (miles)"
                description=""
                class="inputbox"
                size="10"
                />
        <field
                name="airport_ring_2_mile"
                type="text"
                label="Ring 2 (miles)"
                description=""
                class="inputbox"
                size="10"
                />
        <field name="gh_airline" type="radio" default="0" label="Groundhandler Airline" description="Enable/Disable to select airline for Groundhandler">
            <option value="0">No</option>
            <option value="1">Yes</option>
        </field>


		<field name="address" type="textarea"
			label="Address"
			description=""
			class="inputbox"
			rows="3"
			cols="30"
			required="true"
		/>
		<field name="address2" 
			type="text"
			label="Address 2"
			description=""
			class="inputbox"
			size="50"
		/>
		
		<field name="city" type="text"
			label="City"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>

		<field 
			name="state" 
			type="stateedit"
			label="State"
			description=""
			class="inputbox"
		/>

		<field name="zipcode" type="text"
			label="Zipcode"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>

		<field 
			name="country_id" 
			type="countryedit"
			label="Country"
			description=""
			class="inputbox"			
			required="true"
		/>

		<field name="telephone" type="text"
			label="Telephone"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>	
		
		<field name="created_date"
			type="text"
			label="Registered Date"
			description=""
			size="50"
			default="0"
			readonly="true"
			class="readonly"
		/>
		
	</fieldset>	
	
	<fieldset name="billing_details">	
		<field 
			name="billing_id" 
			type="hidden"			
		/>
		<field 
			name="billing_name" 
			type="text"
			label="Registered name"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>
		<field 
			name="billing_address" 
			type="text"
			label="Address"
			description=""
			class="inputbox"
			size="50"
			required="true"
		/>
		<field 
			name="billing_address1" 
			type="text"
			label="Address 1"
			description=""
			class="inputbox"
			size="50"			
		/>
		<field 
			name="billing_address2" 
			type="text"
			label="Address 2"
			description=""
			class="inputbox"
			size="50"
		/>
		
		<field 
			name="billing_city" 
			type="text"
			label="City"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>

		<field 
			name="billing_state" 
			type="stateedit"
			label="State"
			description=""
			class="inputbox"
		/>

		<field 
			name="billing_zipcode" 
			type="text"
			label="Zipcode"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>

		<field 
			name="billing_country_id" 
			type="countryedit"
			label="Country"
			description=""
			class="inputbox"			
			required="true"
		/>

		<field 
			name="billing_tva_number" 
			type="text"
			label="TVA Number"
			description=""
			class="inputbox"
			size="30"
			required="true"
		/>
		
		<field 
			name="unique_token" 
			id="unique_token" 
			type="text"
			label="Unique Token"
			description=""
			class="inputbox"
			size="30"
			required="false"
		/>		
		
	</fieldset>
		
</form>
