<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_sfs/models/rules">
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" 
			readonly="true"  />

		<field name="name" type="text" label="Name"
			description="Flag name" class="inputbox" size="30"
			required="true" />		

		<field name="type_group" type="list" label="Type Group"
			description="Type Group" class="inputbox"
			filter="intval" size="1" default="1"
		>	
			<option value="1">fqtvStatus</option>
			<option value="2">IrregReason</option>
			<option value="3">SSR</option>
		</field>
		<field name="point" type="text" label="Point"
			description="point to priority" class="inputbox" size="30"
			required="true" />
	</fieldset>
</form>
