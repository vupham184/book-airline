<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_sfs/models/rules"
	>
		<field name="id" type="text" default="0" 
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
		
		<field name="name" type="text" class="inputbox"
			size="40" label="Name"
			description="Name" required="true" />

		<field name="state" type="list"
			label="State" description=""
			class="inputbox" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASH</option>
		</field>
		
		<field
			name="access"
			type="accesslevel"
			label="JFIELD_ACCESS_LABEL"
			description="JFIELD_ACCESS_DESC"
			class="inputbox"/>
		
		<field name="ordering" type="chainaffordering" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />


		<field name="created_by" type="chainaffown" label="Created By" description="Created By" />
	
	</fieldset>
</form>
