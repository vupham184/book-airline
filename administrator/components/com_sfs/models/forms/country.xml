			name="code"
			type="text"
			label="COM_SFS_COUNTRY_FIELD_CODE_LABEL"
			description="COM_SFS_COUNTRY_FIELD_CODE_DESC"
			size="18"
			class="inputbox validate-code"
			required="true"
			default=""
		/>		
		<field
			name="code_3"
			type="text"
			label="Code 3"
			description="COM_SFS_COUNTRY_FIELD_CODE_DESC"
			size="18"		
			default=""
		/>				
		<field name="flag" type="media" directory="com_sfs"
				hide_none="1" label="COM_SFS_COUNTRY_FIELD_FLAG_LABEL"
				size="40"
				description="COM_SFS_COUNTRY_FIELD_FLAG_DESC" />						
	</fieldset>
