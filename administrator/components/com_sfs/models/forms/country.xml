<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_sfs/models/rules"
	>
		<field name="id" type="text" default="0" 
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />				
		<field name="name" type="text" class="inputbox"
			size="40" label="COM_SFS_COUNTRY_FIELD_NAME_LABEL"
			description="COM_SFS_COUNTRY_FIELD_NAME_DESC" required="true" />	
		<field name="country_numeric" type="text" class="inputbox"
			size="40" label="COM_SFS_COUNTRY_NUMERIC"
			description="COM_SFS_COUNTRY_NUMERIC" required="true" />
		<field name="default_currency" type="text" class="inputbox"
		size="40" label="COM_SFS_FIELD_CURRENCY_DEFAULT_CURRENCY_LABEL"
		description="COM_SFS_FIELD_CURRENCY_DEFAULT_CURRENCY_LABEL" required="true" />	
