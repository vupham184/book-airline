<?xml version="1.0" encoding="utf-8"?>

<form>
	<fieldset>
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" 
			readonly="true"  />

		<field name="name" type="text" label="Name"
			description="Iata code name" class="inputbox" size="30"
			required="true" />

		<field name="code" type="text" label="IATA Code"
			description="IATA Code" class="inputbox" size="30"
			required="true" />

		<field name="type" type="iatatype" label="IATA Type"
			description="IATA Type" class="inputbox" size="30"
			required="true" />

        <field name="geo_lat" type="text" label="IATA Geo Lat"
               description="Iata IATA Geo Lat" class="inputbox" size="30"
                />

        <field name="geo_lon" type="text" label="IATA Geo Lon"
               description="Iata IATA Geo Lon" class="inputbox" size="30"
                />
					
		<field name="country_id" type="countryselectlist" class="inputbox" label="COM_SFS_COUNTRY_SELECT_LIST_LABEL" description="COM_SFS_COUNTRY_SELECT_LIST_DESC" />
		
		<field name="state" type="list" label="JGLOBAL_STATE"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>	
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
		<field name="comment" type="textarea" label="General Comment"
			description="General comment" class="inputbox"
		/>

		<field name="starting_tariff" type="text" label="Starting tariff"
			   description="Starting tariff of taxi cost" class="inputbox" size="30" default="0"
		/>

		<field name="km_rate" type="text" label="KM Rate"
			   description="Rate taxi per km" class="inputbox" size="30" default="0"
				/>

        <field name="currency_code" type="text" class="inputbox" label="Currency" description="Currency Code" />


        <field name="time_zone" type="text" class="inputbox" label="Timezone" description="Timezone" />


		
		
		<field
				name="mail_communication"
				type="radio"
				default="0"
				label="Mail Communication"
				description="Setup airport mail communication">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
		</field>
		
		<field
				name="fax_communication"
				type="radio"
				default="0"
				label="Fax Communication"
				description="Setup airport fax communication">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
		</field>
		
		<field
				name="enabel_https"
				type="radio"
				default="0"
				label="Enabel HTTPS"
				description="Setup airport enabel HTTPS">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
		</field>
		
		<field
				name="enabel_send_sms"
				type="radio"
				default="0"
				label="Enabel Send SMS"
				description="Setup airport enabel send SMS">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
		</field>

        <field name="site_suffix" type="text" label="Site suffix"
               description="Setup airport site suffix" class="inputbox" size="30" />
			   <field name="currency_id" type="currency" class="inputbox" label="System Currency" description="Setup airport system currency" />
		
		<field name="sfs_system_currency" type="text" label="System Currency"
               description="Setup airport system currency" default="USD" class="inputbox" size="30" />
			   
        <field name="system_smails" type="text" label="System Emails"
               description="Setup airport system emails" class="inputbox" size="30" />
					
		<field
				name="enabel_25rule"
				type="radio"
				default="0"
				label="Enabel 25% RULE"
				description="Setup airport enabel 25% rule">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
		</field>
		
		<field name="rule25" type="text" label="25% RULE" description="Setup airport 25% rule" class="inputbox" size="30" default="0" />
		<field name="hours_on_match_page" type="text" label="Hours on Match Page" description="Setup airport hours on match page" class="inputbox" size="30" default="00:00" />
		
		
		<field name="status" type="list" label="Airport WS Enabled"
			description="Airport WS Enabled" class="inputbox" size="1" default="1"
		>	
			<option value="1">
				Yes</option>
			<option value="0">
				No</option>
		</field>

	</fieldset>


</form>
