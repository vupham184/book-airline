<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="1.6.0"
	client="site"
	method="upgrade">
	<name>mod_sfsuser</name>
	<author>SFS! Project</author>
	<creationDate>July 2011</creationDate>
	<copyright>Copyright (C) 2005 - 2011</copyright>
	<license></license>
	<authorEmail>info@xipat.com</authorEmail>
	<authorUrl>www.xipat.com</authorUrl>
	<version>1.6.0</version>
	<description>Any user can see and edit his own personal data this is done with the same page that one fills in during sign up</description>
	<files>
		<filename
			module="mod_sfsuser">mod_sfsuser.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_sfsuser.xml</filename>
	</files>
	<config>
		<fields name="params">			
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
